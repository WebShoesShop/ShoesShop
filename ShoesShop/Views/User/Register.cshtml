
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <link rel="stylesheet" href="~/Content/style.css">

</head>
<body>
    <div class="login-page">
        <div class="form">
            @if (TempData["Error"] != null)
            {
                if (1 == (int)TempData["Error"])
                {
                    <h5 style="color:red;">* this email has been used</h5>
                }
                else if (2 == (int)TempData["Error"])
                {
                    <h5 style="color:red;">* confirm password NOT match</h5>
                }
            }
            @using (Html.BeginForm("CheckRegister", "User", FormMethod.Post, "register-form"))
            {
                <input type="email" placeholder="Email" name="email" required maxlength="100"/>
                <input type="password" placeholder="Password" name="password" required maxlength="16"/>
                <input type="password" placeholder="Confirm Password" name="cfm_password" required maxlength="16"/>
                <input type="text" placeholder="Name" name="user_name" required maxlength="100"/>
                <input type="text" placeholder="Phone Number" name="phone_number" maxlength="12"/>
                <input type="text" placeholder="Address" name="address" maxlength="100"/>
                <button type="submit">Sign up</button>
                <p class="message">Already registered? @Html.ActionLink("Sign in", "Login", "User")</p>
            }
        </div>
    </div>
    <script src='~/Content/js/jquery.min.js'></script>
    <script src="~/Content/js/index.js"></script>
</body>
</html>


