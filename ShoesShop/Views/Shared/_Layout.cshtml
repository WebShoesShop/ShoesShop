<body>
    <div id="templatemo_body_wrapper">
        <div id="templatemo_wrapper">
            @Html.Partial("_HeaderBar")
            <div id="templatemo_menubar">
                <div id="top_nav" class="ddsmoothmenu">
                    <ul>
                        <li>@Html.ActionLink("Home", "Home", "Home")</li>
                        <li>
                            @Html.ActionLink("Product", "ProductList", "Product", new { manufacturerId = 0, sort = 1, order = 1 }, null)
                            <ul>
                                @{Html.RenderAction("Manufacturer", "Home"); }
                            </ul>
                        </li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("FAQs", "FAQs", "Home")</li>
                        <li>@Html.ActionLink("Checkout", "Checkout", "Home")</li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    </ul>
                    <br style="clear: left" />
                </div>
                @Html.Partial("_SearchBar")
            </div> <!-- END of templatemo_menubar -->

            <div id="templatemo_main">
                <div id="sidebar" class="float_l">
                    <div class="sidebar_box">
                        @{Html.RenderAction("Category", "Home"); }
                    </div>
                    <div class="sidebar_box">
                        @{Html.RenderAction("BestSelling", "Home"); }
                    </div>
                </div>

                <div id="content" class="float_r">
                    @RenderSection("banner", required: false)
                    @RenderBody()
                </div>

                <div class="cleaner"></div>
            </div> <!-- END of templatemo_main -->

            <div id="templatemo_footer">
                <p>
                    @Html.ActionLink("Home", "Home", "Home") | @Html.ActionLink("Product", "Product", "Home") | @Html.ActionLink("About", "About", "Home") | @Html.ActionLink("FAQs", "FAQs", "Home") | @Html.ActionLink("Checkout", "Checkout", "Home") | @Html.ActionLink("Contact Us", "Contact", "Home")
                </p>

