
@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quan ly nguoi dung ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sach nguoi dung
}
<div class="row">
    <div class="col-lg-14">
        <div class="panel panel-default">
            <div class="panel-heading">
                User
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Acount</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Phone Number</th>
                                <th>Money</th>
                                <th>Adress</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.userName</td>
                                    <td>@item.email</td>
                                    <td>@item.password</td>
                                    <td>@item.phoneNum</td>
                                    <td>@item.money</td>
                                    <td>@item.address</td>

                                    <td>
                                        <a href="Edit/@item.userId">Sua</a>
                                    
                                        @Ajax.ActionLink("Xoa", "Delete","User", new { @id = @item.userId }, new AjaxOptions
                                       { 
                                           Confirm = "Ban co muon xoa ban ghi khong?",
                                           OnComplete = "$('row_" + @item.userId + "').remove()",
                                           HttpMethod = "Delete"
                                       }
                                       )
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }));
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>>

