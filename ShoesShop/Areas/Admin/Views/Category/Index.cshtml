
@model PagedList.IPagedList<Model.EF.Category>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quan ly category ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    List Category
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
        
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.categoryName</td>
                                   
                                    <td>
                                        <a href="Edit/@item.categoryId">Sua</a>
                                        @Ajax.ActionLink("Xoa", "Delete", "Category", new { @id = @item.categoryId }, new AjaxOptions
                                   {
                                       Confirm = "Ban co muon xoa ban ghi khong?",
                                       OnComplete = "$('row_" + @item.categoryId + "').remove()",
                                       HttpMethod = "Delete"
                                   }
                                       )
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }));
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>>

