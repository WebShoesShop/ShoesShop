
@model PagedList.IPagedList<Model.EF.Invoice>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quan ly hoa don ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    List Invoice
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Invoice
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Cart </th>
                                <th>Date Of Payment</th>
                                <th>Total Amount</th>
                                <th>Method  </th>
                                <td>Action </td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.cartId</td>
                                    <td>@item.dateOfPayment</td>
                                    <td>@item.totalAmount</td>
                                    <td>@item.methodId</td>
                                    

                                    <td>
                                        <a href="Edit/@item.invoiceId">Sua</a>
                                        @Ajax.ActionLink("Xoa", "Delete", "Invoice", new { @id = @item.invoiceId }, new AjaxOptions
                                   {
                                       Confirm = "Ban co muon xoa ban ghi khong?",
                                       OnComplete = "$('row_" + @item.invoiceId + "').remove()",
                                       HttpMethod = "Delete"
                                   }
                                       )
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }));
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

