
@model PagedList.IPagedList<Model.EF.Transaction>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quan ly Transaction ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    List Transaction
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Transaction
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Method</th>
                                <th>Money</th>
                                <th>User</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.transactionTime</td>
                                    <td>@item.methodId</td>
                                    <td>@item.money</td>
                                    <td>@item.userId</td>

                                    <td>
                                        <a href="Edit/@item.transactionId">Sua</a>
                                        @Ajax.ActionLink("Xoa", "Delete", "Transaction", new { @id = @item.transactionId }, new AjaxOptions
                                   {
                                       Confirm = "Ban co muon xoa ban ghi khong?",
                                       OnComplete = "$('row_" + @item.transactionId + "').remove()",
                                       HttpMethod = "Delete"
                                   }
                                       )
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }));
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
