@model Model.EF.Product

@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Create product
    }
<h2>CreateProduct</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhap thong tin 
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
