
@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quan ly San pham ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sach Product
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Product
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Release Date</th>
                                <th>Start Date</th>
                                <th>Price </th>
                                <th>Description </th>
                                <th>Introduction </th>
                                <th>Product Ava </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.productName</td>
                                    <td>@item.releaseDate</td>
                                    <td>@item.startDate</td>
                                    <td>@item.price</td>
                                    <td>@item.description</td>
                                    <td>@item.introduction</td>
                                    <td><img height="100px" src="@item.productAva" /></td>

                                    <td>
                                        <a href="Edit/@item.productId">Sua</a>
                                        @Ajax.ActionLink("Xoa", "Delete", "Product", new { @id = @item.productId }, new AjaxOptions
                                   {
                                       Confirm = "Ban co muon xoa ban ghi khong?",
                                       OnComplete = "$('row_" + @item.productId + "').remove()",
                                       HttpMethod = "Delete"
                                   }
                                       )
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }));
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
